{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["./resources/scripts/*"]
    },
    "skipLibCheck": true,
    "types": ["vite/client"],
  },
  "include": [
    "resources/scripts/**/*.ts",
    "resources/scripts/**/*.d.ts",
    "resources/scripts/**/*.tsx",
    "resources/scripts/**/*.vue",
  ]
}
